{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    // prettier-ignore
    "rules": {
		"no-any"                  : true,
		"no-empty-interface"      : true,
		"static-this"             : true,
		"function-constructor"    : true,
		"no-duplicate-switch-case": true,
		"no-shadowed-variable"    : true,
		"unnecessary-constructor" : true,
		"no-invalid-this"         : true,                                             //不能在class外使用this
		"class-name"              : true,                                             //驼峰命名class
		"comment-format"          : [true, "check-space"],
		"no-duplicate-imports"    : true,                                             //重复import
		"no-eval"                 : true,                                             //不使用eval
		"no-empty"                : true,                                             //不能有空代码块
		"no-internal-module"      : true,
		"no-trailing-whitespace"  : true,
		"no-unsafe-finally"       : true,
		"no-var-keyword"          : true,                                             //不使用var
		"one-line"                : [true, "check-open-brace", "check-whitespace"],
		"quotemark"               : [true, "single", "jsx-double"],
		"semicolon"               : [true, "always"],                                 //必须分号结尾
		"triple-equals"           : [true, "allow-null-check"],
		"max-classes-per-file"    : [true, 1],                                        //每个文件中只能有一个class
		"no-unused-expression"    : [true, "allow-fast-null-checks"],                 //去掉无用的代码
		"no-duplicate-super"      : true,
		"no-duplicate-variable"   : true,
		"typedef-whitespace": [
			true,
			{
				"call-signature": "nospace",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			}
		],
		"variable-name": [true, "ban-keywords"],

        "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"],
        "no-console": false
	},
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": ["./**.js", "./build/**"]
    }
}